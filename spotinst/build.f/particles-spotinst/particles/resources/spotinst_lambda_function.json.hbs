{{#resource}}
  "Type": "AWS::Lambda::Function",
  "Properties": {
    "FunctionName": "spotinst-builder",
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'spotinst-lambda.zip'}}"
    },
    "Handler": "index.handler",
    "Runtime": "nodejs4.3",
    "Timeout": "60",
    "Role": { "Fn::GetAtt" : ["SpotinstLambdaExecutionRole", "Arn"] }
  }
{{/resource}}
