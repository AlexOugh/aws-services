{{#resource}}
  "Type": "Custom::NotificationAlertSaverFunctionInfo",
  "Properties": {
    "ServiceToken": { "Fn::GetAtt" : ["DeployerLambdaFunction", "Arn"] },
    "Region": { "Ref": "AWS::Region" },
    "FunctionName": "notificationalert_saver",
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'notificationalert.zip'}}"
    },
    "Handler":"awsconfig-notification-alert/index_saver.handler",
    "Runtime": "nodejs",
    "Timeout": "60",
    "MemorySize": "128",
    "Role": { "Fn::GetAtt" : [ "NotificationAlertSaverFunctionRoleInfo", "Arn" ]}
  }
{{/resource}}
