{{#resource}}
  "Type": "AWS::Lambda::Function",
  "Properties": {
  "FunctionName": "notification_alert",
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'index_alertmessages.zip'}}"
    },
    "Handler": "lambda/index_alertmessages.handler",
    "Runtime": "nodejs4.3",
    "Timeout": "30",
    "Role": { "Fn::GetAtt" : ["AlertMessagesFunctionRoleInfo", "Arn"] }
  }
{{/resource}}
