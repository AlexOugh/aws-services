{{#resource}}
  "Type": "AWS::Lambda::Function",
  "Properties": {
    "Code": {
      "S3Bucket": { "Fn::Join" : [ "", [ { "Ref" : "AWS::AccountId" }, { "Ref": "DeployerS3BucketPostfix" }, { "Ref" : "AWS::Region" } ]]},
      "S3Key": { "Ref": "DeployerS3Key" }
    },
    "Handler": { "Fn::Join" : [ "", [{ "Ref": "DeployerModuleName" },".handler"] ] },
    "Runtime": "nodejs",
    "Timeout": "60",
    "Role": { "Fn::GetAtt" : ["DeployerLambdaExecutionRole", "Arn"] }
  }
{{/resource}}
