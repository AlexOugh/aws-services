{{#resource}}
  "Type": "Custom::AlarmAlertSaverFunctionInfo",
  "Properties": {
    "ServiceToken": { "Fn::GetAtt" : ["DeployerLambdaFunction", "Arn"] },
    "Region": { "Ref": "AWS::Region" },
    "FunctionName": "alarmalert_saver",
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'alarmalert.zip'}}"
    },
    "Handler":"alarmalert/index_saver.handler",
    "Runtime": "nodejs4.34.34.3",
    "Timeout": "180",
    "MemorySize": "128",
    "Role": { "Fn::GetAtt" : [ "AlarmAlertSaverFunctionRoleInfo", "Arn" ]}
  }
{{/resource}}
