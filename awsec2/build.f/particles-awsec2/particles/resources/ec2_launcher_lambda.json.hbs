{{#resource}}
  "Type": "AWS::Lambda::Function",
  "Properties": {
    "FunctionName": "ec2-launcher",
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'awsec2.zip'}}"
    },
    "Handler": "awsec2/index_ec2_launcher.handler",
    "Runtime": "nodejs",
    "Timeout": "60",
    "MemorySize": "128",
    "Role": { "Fn::GetAtt" : ["LambdaExecutionRole", "Arn"] }
  }
{{/resource}}
