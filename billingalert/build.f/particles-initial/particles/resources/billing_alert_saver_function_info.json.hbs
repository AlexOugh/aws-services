{{#resource}}
  "Type": "Custom::BillingAlertSaverFunctionInfo",
  "Properties": {
    "ServiceToken": { "Fn::GetAtt" : ["DeployerLambdaFunction", "Arn"] },
    "Region": { "Ref": "AWS::Region" },
    "FunctionName": "billingalert_saver",
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'billingalert.zip'}}"
    },
    "Handler":"billingalert/index_saver.handler",
    "Runtime": "nodejs8.10",
    "Timeout": "60",
    "MemorySize": "128",
    "Role": { "Fn::GetAtt" : [ "BillingAlertSaverFunctionRoleInfo", "Arn" ]}
  }
{{/resource}}
