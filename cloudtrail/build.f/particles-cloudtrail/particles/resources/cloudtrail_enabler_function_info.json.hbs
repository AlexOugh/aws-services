{{#resource}}
  "Type": "AWS::Lambda::Function",
  "Properties": {
    "FunctionName": "cloudtrail-enabler",
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'cloudtrail.zip'}}"
    },
    "Handler":"cloudtrail/index_enabler.handler",
    "Runtime": "nodejs",
    "Timeout": "60",
    "MemorySize": "128",
    "Role": { "Fn::GetAtt" : [ "CloudTrailFunctionRoleInfo", "Arn" ]}
  }
{{/resource}}
