{{#resource}}
  "Type": "AWS::Lambda::Function",
  "Properties": {
    "Code": {
      "S3Bucket": "{{s3.bucket}}",
      "S3Key": "{{assetPath 'billing.zip'}}"
    },
    "Handler": "billing/handler.handler",
    "Runtime": "nodejs4.3",
    "Timeout": "300",
    "Role": { "Fn::GetAtt" : ["LambdaExecutionRole", "Arn"] }
  }
{{/resource}}
