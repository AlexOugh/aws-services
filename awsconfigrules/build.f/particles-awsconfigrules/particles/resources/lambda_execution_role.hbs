{{#resource}}
  "Type": "AWS::IAM::Role",
  "Properties": {
    "AssumeRolePolicyDocument": {
      "Version": "2012-10-17",
      "Statement": [{
        "Effect": "Allow",
        "Principal": {"Service": ["lambda.amazonaws.com"]},
        "Action": ["sts:AssumeRole"]
      }]
    },
    "Path": "/",
    "Policies": [{
      "PolicyName": "root",
      "PolicyDocument": {
          "Statement": [
            {
              "Resource": "*",
              "Action": [
                "config:Put*",
                "config:Get*",
                "config:List*",
                "config:Describe*",
                "ec2:Describe*",
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Effect": "Allow"
            }
          ],
          "Version": "2012-10-17"
      }
    }]
  }
{{/resource}}
