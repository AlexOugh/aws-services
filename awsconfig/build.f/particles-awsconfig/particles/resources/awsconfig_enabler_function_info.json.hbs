{{#resource}}
"Type": "Custom::AWSConfigFunction",
"Properties": {
  "ServiceToken": { "Fn::GetAtt" : ["DeployerLambdaFunction", "Arn"] },
  "Region": { "Ref": "AWS::Region" },
  "FunctionName": "awsconfig-enabler",
  "Code": {
    "S3Bucket": "{{s3.bucket}}",
    "S3Key": "{{assetPath 'awsconfig.zip'}}"
  },
  "Handler": "awsconfig/index_enabler.handler",
  "Runtime": "nodejs",
  "Timeout": "60",
  "MemorySize": "128",
  "Role": { "Fn::GetAtt" : ["AWSConfigFunctionRoleInfo", "Arn"] }
}
{{/resource}}
